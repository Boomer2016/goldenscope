#root
  width 100%
  height 100%
.frame
  min-width 1200px
  height 100%
.frame-main
  @extend .frame
  /.main-col
    height 100%
    overflow-y auto
  /.sidebar-col
    @extend .main-col
    background-color #fff
.frame-title-control
  display inline-block
  margin 12px 0 0 12px
  font-weight 600
  font-size 18px
  color rgba(0, 0, 0, 0.65)
  font-family Avenir, Helvetica Neue, Arial, Helvetica, sans-serif
  vertical-align middle
.side-bar
  width 140px
  background #000
  min-height 100vh
  overflow auto
  .user-area
    height 250px
    border-bottom 1px solid rgba(255, 255, 255, 0.25)
    color #ffffff
    text-align center
    .user-info-desc
      padding 10px
      color rgba(255, 255, 255, 0.65)
      font-weight 200
      font-size 10px
  .menu-area
    color rgba(255, 255, 255, 0.45)
    padding-left 10px
  .menu-hover
    &:hover
      color #ffffff
  .menu-icon
    width 22px
    height 20px
    padding 0px 4px 6px 0px
  .active
    color #ffffff